<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background"
    >
	<RelativeLayout
        android:id="@+id/barLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_gradient"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/txtAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AroundMe"
                android:textAppearance="?android:attr/textAppearanceLarge" 
                 android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/txtPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profilo" 
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/ic_menu_search" />
        </LinearLayout>
    </RelativeLayout>
	<View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF909090" />
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
	         <ImageView
	            android:id="@+id/imgPhoto"
	            android:layout_width="110dp"
	            android:layout_height="110dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:src="@drawable/ic_no_photo" />
			<LinearLayout 
			     xmlns:android="http://schemas.android.com/apk/res/android"
	            android:id="@+id/linearLayout1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
		        <TextView
		            android:id="@+id/txtName"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Marco Magnetti" 
		            android:textSize="30dp"
		            android:textColor="#111111"
		            />
		        <ImageView
		            android:id="@+id/imgfbProfile"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/fb_icon" />
			</LinearLayout>
	</LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtToDo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:text="da inserire:

List view verticale che contiene una listView orizzontale
(Adapter annidati if is possible)" />

</LinearLayout>